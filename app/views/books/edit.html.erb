<%= stylesheet_link_tag "edit" %>
<main>
	<% if @book.errors.any? %>
	<div class="error_explanation">
		<h5><%= pluralize(@book.errors.count, "error") %>prohibited this article from being saved:</h5>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<h1>Editing Book</h1>
	<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<p><%= f.submit 'Update Book' %></p>
	<% end %>

	<%= link_to "Show", @book %> |
	<%= link_to "Back", books_path %>

</main>